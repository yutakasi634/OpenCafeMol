[INPUT]
grotopfile          = 1SRL_cg.top # topology file
grocrdfile          = 1SRL_cg.gro # coordinate file

[OUTPUT]
pdbfile             = output/1SRL_md1.pdb # PDB output
dcdfile             = output/1SRL_md1.dcd # DCD trajectory
rstfile             = output/1SRL_md1.rst # restart file

[ENERGY]
forcefield          = RESIDCG     # CG model: AICG2+
electrostatic       = CUTOFF      # Debye-Huckel model
cg_pairlistdist_exv = 15.0        # Neighbor-list distance

[DYNAMICS]
integrator          = VVER_CG     # velocity-verlet propagation
nsteps              = 1000000     # number of MD steps
timestep            = 0.010       # timestep size (ps)
eneout_period       = 1000        # energy output interval
crdout_period       = 1000        # trajectory output interval
rstout_period       = 1000        # restart output interval
nbupdate_period     = 20          # pairlist update interval
iseed               = 12345

[CONSTRAINTS]
rigid_bond          = NO          # don't apply constraints

[ENSEMBLE]
ensemble            = NVT         # Canonical ensemble
tpcontrol           = LANGEVIN    # Langevin thermostat
temperature         = 300         # simulation temperature
gamma_t             = 0.01        # thermostat friction parameter

[BOUNDARY]
type                = NOBC

# optional table. By default, use "CUDA" platform with default properties.
[PLATFORM]
name = CUDA
# values other than `name` are considered as properties
Precision = single
UseCpuPme = false
DeviceIndex = 0

